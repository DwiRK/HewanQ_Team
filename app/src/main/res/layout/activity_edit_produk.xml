<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".View.Activity.ActivityTambahProduk">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tambah_nama_produk"
                android:background="@drawable/edit_text_background"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:hint="Nama Produk"
                android:inputType="text"
                android:textColor="#000"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/tambah_kategori_produk"
                android:background="@drawable/edit_text_background"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:hint="Kategori"
                android:inputType="number"
                android:textColor="#000"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/tambah_harga_produk"
                android:background="@drawable/edit_text_background"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:hint="Harga"
                android:inputType="text"
                android:textColor="#000"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/tambah_kondisi_produk"
                android:background="@drawable/edit_text_background"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:hint="Kondisi"
                android:inputType="text"
                android:textColor="#000"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/tambah_berat_produk"
                android:background="@drawable/edit_text_background"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:hint="Berat"
                android:inputType="text"
                android:textColor="#000"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/tambah_desk_produk"
                android:background="@drawable/edit_text_background"
                android:layout_width="320dp"
                android:layout_height="84dp"
                android:padding="5dp"
                android:hint="Deskripsi"
                android:inputType="text|textMultiLine"
                android:textColor="#000"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="32dp"
                android:textSize="18sp"
                android:text="Foto Item"/>

            <ImageView
                android:id="@+id/tambah_img_produk"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_upld_img_produk"
                android:background="@drawable/rounded_btn_white"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="32dp"
                android:textSize="15sp"
                android:clickable="true"
                android:text="Choose File"/>

            <Button
                android:id="@+id/btn_submit_produk"
                android:background="@drawable/rounded_btn_green"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="80dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:text="Simpan"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>