<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recycler_foto_dokter"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_img"/>

                <TextView
                    android:id="@+id/recycler_nama_dokter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Nama"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/recycler_lokasi_dokter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Surabaya"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/mini_map"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/recycler_spesialis_dokter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Rp. 270.000"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/mini_pet"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/recycler_klinik_dokter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Klinik Suka Bersih"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/mini_home"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/recycler_btn_konsul_dokter"
                    android:background="@drawable/rounded_btn_green"
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:text="Konsultasi"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>